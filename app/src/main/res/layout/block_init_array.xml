<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BlockArray"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#E5AB65">

        <TextView
            android:id="@+id/text_array"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu"
            android:text="array"
            android:textColor="#383636"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/name_array"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Название"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/text_array"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="#383636"
            android:fontFamily="@font/ubuntu"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/white"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/open_bracket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ubuntu"
            android:text="["
            android:layout_toRightOf="@+id/name_array"
            android:textColor="#383636"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/len_array"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Длина"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/open_bracket"
            android:layout_centerVertical="true"
            android:textColor="#383636"
            android:fontFamily="@font/ubuntu"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/white"
            android:inputType="text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/ubuntu"
            android:text="]"
            android:layout_toRightOf="@+id/len_array"
            android:textColor="#383636"
            android:textSize="20sp"/>

    </RelativeLayout>
</RelativeLayout>